<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.BaeminMenuMapper">

	
	
	 
	
	<!-- 메뉴 테이블 -->
	<insert id="insertAddMenu" parameterType="menu">
		insert into menu(menu_num, menu_name, menu_price, menu_boss, menu_img)
		values(seq_menu.nextval, #{menuName}, #{menuPrice}, #{menuBoss}, #{menuImg})
	</insert>
	
	<!-- 메뉴 품절 관리 -->
	<update id="updateSoldOut" parameterType="menu">
		UPDATE menu SET menu_soldout = #{menuSoldOut}
		WHERE menu_num = #{menuNum}
	</update>
	
